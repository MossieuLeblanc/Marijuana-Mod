<?xml version="1.0" encoding="utf-8" ?>
<Plants>
  <!--=========================== Crops ==============================-->



  <ThingDef ParentName="PlantBase">
    <defName>CannabisPlant</defName>
    <label>Cannabis plant</label>
    <description>A flowering plant that yields a psychoactive drug which is obtained through the dried flowers of the plant.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>1</Beauty>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/CannabisPlant</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>12</pathCost>
    <ingestible>
      <foodType>Plant</foodType>
      <preferability>NeverForNutrition</preferability>
      <nutrition>0.05</nutrition>
    </ingestible>
    <plant>
      <dieIfLeafless>true</dieIfLeafless>
      <shootsSeeds>false</shootsSeeds>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>Marijuana</harvestedThingDef>
      <harvestDestroys>true</harvestDestroys>
      <harvestYield>8</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <sowResearchPrerequisites>
        <li>PsychoactiveDrugs</li>
      </sowResearchPrerequisites>
      <topWindExposure>0.2</topWindExposure>
      <growDays>7</growDays>
      <fertilityFactorGrowthRate>1</fertilityFactorGrowthRate>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.5</max>
      </visualSizeRange>
    </plant>
  </ThingDef>



</Plants>
